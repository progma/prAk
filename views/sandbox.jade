extends layout

block body
    div(class="innerSlides")
        div(class="slide", style="display: block; margin-left: -440px; left: 50%;")
            p
              input(type="button", value="Sdílet", class="btn")
              span(style="float:right") Mód:&nbsp;
                select(name="mode")
                    if mode == 'turtle3d'
                      option(value="turtle2d") 2D Želva
                      option(value="turtle3d", selected="selected") 3D Želva
                    else
                      option(value="turtle2d", selected="selected") 2D Želva
                      option(value="turtle3d") 3D Želva
            div(id="turtleEditor")
                textarea(id="editorArea") !{code}
        div(class="slide", style="display: block; margin-left: 1px; left: 50%;")
            div(id="turtleSpace")

block scripts
    script(src="/javascripts/course.js/sandbox.js")
