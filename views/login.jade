extends layout

block body
  section#login
    .page-header
      h1 Přihlášení
    .row
      .span4.offset4
        form.well(action="/login", method="post")
          fieldset
            .control-group
              label.control-label(for="username") E-mail:
              .controls
                input(style="height: 35px; box-sizing:border-box; width: 100%;",
                      type="text",
                      name="username",
                      placeholder="email")
            .control-group
              label.control-label(for="password") Heslo:
              .controls
                input(style="height: 35px; box-sizing:border-box; width: 100%;",
                      type="password",
                      name="password",
                      placeholder="password")
            .control-group
              .controls
                button.btn.btn-large.btn-primary(type="submit") Odeslat
                a.btn.btn-large.pull-right(href="/registrace") Vytvořit nový účet
